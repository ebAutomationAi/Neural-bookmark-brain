# Database Configuration (obligatorio: sin DATABASE_URL la app no arranca)
DATABASE_URL=postgresql+asyncpg://bookmark_user:YOUR_PASSWORD@localhost:5432/neural_bookmarks

# Docker Compose: usuario y contraseña de PostgreSQL (definir en .env)
POSTGRES_USER=bookmark_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=neural_bookmarks

# CORS: orígenes permitidos separados por coma; * = todos (solo desarrollo)
CORS_ORIGINS=*

# AI Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_CONCURRENT_REQUESTS=10

# Scraping Configuration
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=3
SCRAPER_DELAY_BETWEEN_REQUESTS=1.0
SCRAPER_MAX_REDIRECTS=5
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; NeuralBookmarkBot/1.0)

# Safety Configuration
NSFW_KEYWORDS=adult,porn,xxx,sex,nude,nsfw,18+,onlyfans,escort
NSFW_DOMAINS=pornhub.com,xvideos.com,xnxx.com,redtube.com,onlyfans.com

# Rate Limiting (API Protection)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_SEARCH=10/minute
RATE_LIMIT_CREATE=5/minute
RATE_LIMIT_GLOBAL=100/minute

# Local Development Domains (won't be scraped)
LOCAL_DOMAINS=.local,.test,localhost,127.0.0.1,192.168
